<owo-ui xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="https://raw.githubusercontent.com/wisp-forest/owo-lib/1.20/owo-ui.xsd">
    <components>
        <grid-layout columns="2" rows="2">
            <children>
                <flow-layout direction="vertical" row="0" column="0">
                    <children>
                        <flow-layout direction="horizontal">
                            <children>
                                <button id="select_image_file">
                                    <text translate="true">hyacinth.button_select_image_file</text>
                                </button>
                            </children>
                        </flow-layout>
                        <scroll direction="vertical">
                            <flow-layout direction="vertical" id="block_palette">
                                <children/>
                            </flow-layout>

                            <sizing>
                                <horizontal method="fill">70</horizontal>
                                <vertical method="fill">40</vertical>
                            </sizing>

                            <padding>
                                <all>10</all>
                            </padding>

                            <scrollbar>
                                <vanilla/>
                            </scrollbar>

                            <scrollbar-thiccness>5</scrollbar-thiccness>

                            <surface>
                                <panel-with-inset>2</panel-with-inset>
                            </surface>
                        </scroll>
                    </children>
                </flow-layout>
                <flow-layout direction="vertical" row="1" column="1">
                    <children>
                        <flow-layout direction="horizontal">
                            <children>
                                <label>
                                    <text translate="true">hyacinth.map_size</text>
                                </label>
                                <text-box id="map_length">
                                    <text>1</text>
                                    <sizing>
                                        <horizontal method="fixed">10</horizontal>
                                        <vertical method="fixed">10</vertical>
                                    </sizing>
                                </text-box>
                                <label>
                                    <text>x</text>
                                </label>
                                <text-box id="map_height">
                                    <text>1</text>
                                    <sizing>
                                        <horizontal method="fixed">10</horizontal>
                                        <vertical method="fixed">10</vertical>
                                    </sizing>
                                </text-box>
                            </children>
                        </flow-layout>
                        <flow-layout direction="horizontal">
                            <children>
                                <label>
                                    <text translate="true">hyacinth.resizing_strategy</text>
                                </label>
                                <flow-layout direction="vertical" id="resizing_strategy_container">
                                    <children>
                                        <button id="resizing_strategy">
                                            <text>Pick</text>
                                        </button>
                                    </children>
                                    <sizing>
                                        <vertical method="content"/>
                                        <horizontal method="content"/>
                                    </sizing>
                                </flow-layout>
                            </children>
                        </flow-layout>
                    </children>
                    <padding>
                        <all>10</all>
                    </padding>
                    <surface>
                        <panel-with-inset>2</panel-with-inset>
                    </surface>
                </flow-layout>
            </children>
            <surface>
                <vanilla-translucent/>
            </surface>
        </grid-layout>
    </components>
</owo-ui>
