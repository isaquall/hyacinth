<owo-ui xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="https://raw.githubusercontent.com/wisp-forest/owo-lib/1.20/owo-ui.xsd">
    <components>
        <grid-layout columns="2" rows="2">
            <children>
                <flow-layout direction="vertical" column="0" row="0">
                    <children>
                        <flow-layout direction="vertical">
                            <children>
                                <label>
                                    <text translate="true">hyacinth.block_palettes</text>
                                    <margins>
                                        <bottom>5</bottom>
                                    </margins>
                                </label>
                                <scroll direction="vertical">
                                    <flow-layout direction="vertical" id="block_palette">
                                        <children/>
                                    </flow-layout>

                                    <scrollbar>
                                        <vanilla/>
                                    </scrollbar>

                                    <scrollbar-thiccness>5</scrollbar-thiccness>

                                    <sizing>
                                        <horizontal method="fill">100</horizontal>
                                        <vertical method="fill">95</vertical>
                                    </sizing>
                                </scroll>
                            </children>

                            <padding>
                                <all>10</all>
                            </padding>

                            <surface>
                                <panel-with-inset>2</panel-with-inset>
                            </surface>
                            <sizing>
                                <horizontal method="fill">50</horizontal>
                                <vertical method="fill">60</vertical>
                            </sizing>
                        </flow-layout>

                        <flow-layout direction="vertical" id="render-settings">
                            <children>
                                <label>
                                    <text translate="true">hyacinth.render_settings</text>
                                    <margins>
                                        <bottom>5</bottom>
                                    </margins>
                                </label>

                                <flow-layout direction="horizontal">
                                    <children>
                                        <label>
                                            <text translate="true">hyacinth.show_grid</text>
                                            <margins>
                                                <top>2</top>
                                                <right>1</right>
                                            </margins>
                                        </label>
                                        <small-checkbox id="checkbox_show_grid">
                                            <checked>false</checked>
                                        </small-checkbox>
                                    </children>
                                </flow-layout>

                                <flow-layout direction="horizontal">
                                    <children>
                                        <label>
                                            <text translate="true">hyacinth.better_color</text>
                                            <tooltip-text translate="true">hyacinth.better_color_tooltip</tooltip-text>
                                            <margins>
                                                <top>2</top>
                                                <right>1</right>
                                            </margins>
                                        </label>
                                        <small-checkbox id="checkbox_better_color">
                                            <checked>true</checked>
                                        </small-checkbox>
                                    </children>
                                </flow-layout>
                            </children>
                            <padding>
                                <all>10</all>
                            </padding>
                            <gap>2</gap>
                            <surface>
                                <panel-with-inset>2</panel-with-inset>
                            </surface>
                            <sizing>
                                <horizontal method="fill">50</horizontal>
                                <vertical method="fill">40</vertical>
                            </sizing>
                        </flow-layout>
                    </children>
                </flow-layout>
                <flow-layout direction="vertical" column="1" row ="0" id="map-preview-container">
                    <children>
                        <flow-layout direction="horizontal">
                            <children>
                                <label>
                                    <text translate="true">hyacinth.map_preview</text>
                                </label>
                                <texture texture="hyacinth:textures/gui/download.png"
                                         texture-width="16" texture-height="16"
                                         region-width="16" region-height="16"
                                         id="download-button">
                                    <tooltip-text translate="true">hyacinth.download</tooltip-text>
                                </texture>
                            </children>
                            <gap>3</gap>
                        </flow-layout>
                    </children>
                    <sizing>
                        <horizontal method="fill">50</horizontal>
                        <vertical method="fill">50</vertical>
                    </sizing>
                    <padding>
                        <all>10</all>
                    </padding>
                    <surface>
                        <panel-with-inset>2</panel-with-inset>
                    </surface>
                    <allow-overflow>true</allow-overflow>
                </flow-layout>
                <flow-layout direction="vertical" column="1" row="1" id="schematic-settings">
                    <children>
                        <label>
                            <text translate="true">hyacinth.schematic_settings</text>
                            <margins>
                                <bottom>5</bottom>
                            </margins>
                        </label>
                        <flow-layout direction="horizontal">
                            <children>
                                <button id="export-to-litematica">
                                    <text translate="true">hyacinth.export_to_litematica</text>
                                </button>
                            </children>
                            <gap>2</gap>
                        </flow-layout>
                    </children>
                    <sizing>
                        <horizontal method="fill">50</horizontal>
                        <vertical method="fill">50</vertical>
                    </sizing>
                    <padding>
                        <all>10</all>
                    </padding>
                    <gap>2</gap>
                    <surface>
                        <panel-with-inset>2</panel-with-inset>
                    </surface>
                </flow-layout>
            </children>
            <surface>
                <vanilla-translucent/>
            </surface>
        </grid-layout>
    </components>
</owo-ui>
