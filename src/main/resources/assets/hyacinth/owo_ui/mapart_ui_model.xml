<owo-ui xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="https://raw.githubusercontent.com/wisp-forest/owo-lib/1.20/owo-ui.xsd">
    <components>
        <grid-layout columns="2" rows="2">
            <children>
                <flow-layout direction="vertical" column="0" row="0">
                    <children>
                        <flow-layout direction="vertical">
                            <children>
                                <flow-layout direction="horizontal">
                                    <children>
                                        <button id="select_image_file">
                                            <text translate="true">hyacinth.button_select_image_file</text>
                                        </button>
                                    </children>
                                </flow-layout>
                                <scroll direction="vertical">
                                    <flow-layout direction="vertical" id="block_palette">
                                        <children/>
                                    </flow-layout>

                                    <sizing>
                                        <horizontal method="fill">50</horizontal>
                                        <vertical method="fill">60</vertical>
                                    </sizing>

                                    <padding>
                                        <all>10</all>
                                    </padding>

                                    <scrollbar>
                                        <vanilla/>
                                    </scrollbar>

                                    <scrollbar-thiccness>5</scrollbar-thiccness>

                                    <surface>
                                        <panel-with-inset>2</panel-with-inset>
                                    </surface>
                                </scroll>
                            </children>
                        </flow-layout>
                        <flow-layout direction="vertical">
                            <children>
                                <flow-layout direction="horizontal">
                                    <children>
                                        <label>
                                            <text translate="true">hyacinth.map_size</text>
                                        </label>
                                        <text-box id="map_width">
                                            <max-length>1</max-length>
                                            <sizing>
                                                <horizontal method="fixed">15</horizontal>
                                                <vertical method="fixed">15</vertical>
                                            </sizing>
                                        </text-box>
                                        <label>
                                            <text>x</text>
                                        </label>
                                        <text-box id="map_height">
                                            <max-length>1</max-length>
                                            <sizing>
                                                <horizontal method="fixed">15</horizontal>
                                                <vertical method="fixed">15</vertical>
                                            </sizing>
                                        </text-box>
                                    </children>
                                </flow-layout>

                                <flow-layout direction="horizontal">
                                    <children>
                                        <label>
                                            <text translate="true">hyacinth.resizing_strategy</text>
                                        </label>
                                        <flow-layout direction="vertical" id="resizing_strategy_container">
                                            <children>
                                                <button id="resizing_strategy">
                                                    <text>Pick</text>
                                                </button>
                                            </children>
                                            <sizing>
                                                <vertical method="content"/>
                                                <horizontal method="content"/>
                                            </sizing>
                                        </flow-layout>
                                    </children>
                                </flow-layout>

                                <flow-layout direction="horizontal">
                                    <children>
                                        <label>
                                            <text translate="true">hyacinth.dithering_strategy</text>
                                        </label>
                                        <flow-layout direction="vertical" id="dithering_strategy_container">
                                            <children>
                                                <button id="dithering_strategy">
                                                    <text>Pick</text>
                                                </button>
                                            </children>
                                            <sizing>
                                                <vertical method="content"/>
                                                <horizontal method="content"/>
                                            </sizing>
                                        </flow-layout>
                                    </children>
                                </flow-layout>

                                <flow-layout direction="horizontal">
                                    <children>
                                        <label>
                                            <text translate="true">hyacinth.show_grid</text>
                                        </label>
                                        <small-checkbox id="checkbox_show_grid">
                                            <checked>false</checked>
                                        </small-checkbox>
                                    </children>
                                </flow-layout>
                            </children>
                            <padding>
                                <all>10</all>
                            </padding>
                            <surface>
                                <panel-with-inset>2</panel-with-inset>
                            </surface>
                            <sizing>
                                <horizontal method="fill">50</horizontal>
                                <vertical method="fill">35</vertical>
                            </sizing>
                        </flow-layout>
                    </children>
                </flow-layout>
                <flow-layout direction="vertical" column="1" row ="0" id="map-preview-container">
                    <children/>
                    <sizing>
                        <horizontal method="fill">50</horizontal>
                        <vertical method="fill">50</vertical>
                    </sizing>
                    <surface>
                        <panel-with-inset>2</panel-with-inset>
                    </surface>
                    <margins>
                        <top>20</top>
                    </margins>
                    <allow-overflow>true</allow-overflow>
                </flow-layout>
                <flow-layout direction="vertical" column="1" row="1">
                    <children>
                        <flow-layout direction="horizontal">
                            <children>
                                <label>
                                    <text translate="true">hyacinth.export_type</text>
                                    <margins>
                                        <right>3</right>
                                    </margins>
                                </label>
                                <flow-layout direction="vertical" id="export_type_container">
                                    <children>
                                        <button id="export_type">
                                            <text>Pick</text>
                                        </button>
                                    </children>
                                    <sizing>
                                        <vertical method="content"/>
                                        <horizontal method="content"/>
                                    </sizing>
                                </flow-layout>
                            </children>
                        </flow-layout>
                        <flow-layout direction="horizontal">
                            <children>
                                <label>
                                    <text translate="true">hyacinth.support_mode</text>
                                    <margins>
                                        <right>3</right>
                                    </margins>
                                </label>
                                <flow-layout direction="vertical" id="support_mode_container">
                                    <children>
                                        <button id="support_mode">
                                            <text>Pick</text>
                                        </button>
                                    </children>
                                    <sizing>
                                        <vertical method="content"/>
                                        <horizontal method="content"/>
                                    </sizing>
                                </flow-layout>
                            </children>
                        </flow-layout>
                    </children>
                    <sizing>
                        <horizontal method="fill">50</horizontal>
                        <vertical method="fill">50</vertical>
                    </sizing>
                    <padding>
                        <all>10</all>
                    </padding>
                    <surface>
                        <panel-with-inset>2</panel-with-inset>
                    </surface>
                </flow-layout>
            </children>
            <surface>
                <vanilla-translucent/>
            </surface>
        </grid-layout>
    </components>
</owo-ui>
