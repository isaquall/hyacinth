                <scroll direction="vertical">
                    <flow-layout direction="vertical" id="block_palette">
                        <children/>
                    </flow-layout>

                    <sizing>
                        <horizontal method="fill">70</horizontal>
                        <vertical method="fill">40</vertical>
                    </sizing>

                    <padding>
                        <all>10</all>
                    </padding>

                    <margins>
                        <left>10</left>
                    </margins>

                    <scrollbar>
                        <vanilla/>
                    </scrollbar>

                    <scrollbar-thiccness>5</scrollbar-thiccness>

                    <surface>
                        <panel-with-inset>2</panel-with-inset>
                    </surface>
                </scroll>
            </children>

            <surface>
                <vanilla-translucent/>
            </surface>
        </flow-layout>
    </components>
</owo-ui>
